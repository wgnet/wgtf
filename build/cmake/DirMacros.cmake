FUNCTION(BW_SET_DEBUG_POSTFIX _VALUE)
  SET_PROPERTY(GLOBAL PROPERTY BW_DEBUG_NAME_POSTFIX ${_VALUE})
ENDFUNCTION()

FUNCTION(BW_GET_DEBUG_POSTFIX _VALUE)
  GET_PROPERTY( POSTFIX GLOBAL PROPERTY BW_DEBUG_NAME_POSTFIX )
  SET(${_VALUE} ${POSTFIX} PARENT_SCOPE)
ENDFUNCTION()

FUNCTION(BW_SET_USE_CONFIGURATION_NAME _VALUE)
  SET_PROPERTY(GLOBAL PROPERTY BW_USE_CONF_NAME ${_VALUE})
ENDFUNCTION()

FUNCTION(BW_FORMAT_DST_DIR _DSTDIR)
  GET_PROPERTY( USE_CONF GLOBAL PROPERTY BW_USE_CONF_NAME )
  IF (${USE_CONF})
    SET(${_DSTDIR} ${${_DSTDIR}}/${CMAKE_CFG_INTDIR} PARENT_SCOPE)
  ENDIF()
ENDFUNCTION()

FUNCTION(BW_SET_TEST_DST_DIR _DIRPATH)
