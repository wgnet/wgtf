ENDFUNCTION()

FUNCTION(BW_GET_TEST_DST_DIR _DIRPATH)
  GET_PROPERTY( DIR_VALUE GLOBAL PROPERTY BW_TEST_DST_DIR )
  BW_FORMAT_DST_DIR( DIR_VALUE )
  SET(${_DIRPATH} ${DIR_VALUE} PARENT_SCOPE)
ENDFUNCTION()

